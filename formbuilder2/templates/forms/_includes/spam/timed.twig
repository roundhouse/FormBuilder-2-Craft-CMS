{% set container = {
    title: 'Timed' |t,
    info: null |t,
    icon: null,
    toggle: true,
    class: null,
    id: null
} %}

{% set inputs = {
    0: {
        type: 'text',
        name: 'spam[timed][number]',
        value: form.spam.timed.number is defined ? form.spam.timed.number : '',
        class: 'hidden',
        id: null,
        hint: 'NUMBER',
        validation: {
            type: 'number',
            length: 5,
            errorMessage: 'Only numbers allowed.' |t
        }
    },
    1: {
        type: 'checkbox',
        name: 'spam[timed][enabled]',
        value: 'true',
        checked: form.spam.timed.enabled is defined and form.spam.timed.enabled == 'true' ? true : false,
        class: 'hidden',
        id: null
    },
} %}

{% set modal = {
    title: 'Time' |t,
    instructions: 'Enter how many seconds to wait untill submissions are valid.' |t,
    successMessage: 'Timed Protection Updated.' |t,
    inputs: inputs
} %}

{{ components.optionItem(
    container,
    modal,
    inputs
) }}